<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="459dp">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="IDReserva :"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idreserva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="..."
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout7"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechareserva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="..."
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout6"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hora :"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/horareserva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="..."
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Servicios :"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/serviciosreserva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="..."
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cliente :"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clientereserva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="..."
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comentario :"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comentarioreserva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="..."
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView37"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <EditText
                android:id="@+id/encargadoreserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="..."
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <Button
                android:id="@+id/buttonEditarEncargado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFC107"
                android:text="Editar encargado"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout10"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <Button
                android:id="@+id/buttonEnviarDatos"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFC107"
                android:text="Enviar datos"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout9"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:text="Asignar encargado :"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>